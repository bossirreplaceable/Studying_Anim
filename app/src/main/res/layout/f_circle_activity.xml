<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.yobo.studying_anim.lsn31_shaper.CircleImageView
        android:id="@+id/f_circlePic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.yobo.studying_anim.lsn31_shaper.GradientView
        android:id="@+id/f_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时刻不要停止大脑的思考"
        android:textColor="#ffff0000"
        android:textSize="30sp"
        android:onClick="changeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_circlePic"

        />


</android.support.constraint.ConstraintLayout>